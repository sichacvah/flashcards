= simple_form_for current_user, url: profile_path, method: :put, html: { class: 'form-horizontal' } do |f|
  = f.input :email
  = f.input :password, label: t(:password)
  = f.input :password_confirmation, label: t(:password_confirmation)
  = f.input :locale, priority: [:ru], collection: [["English", :en], ["Русский", :ru]], label: t(:locale)
  = f.button :submit
