- if notice.present?
  .alert.alert-dismissible.alert-success
    = notice

.panel.panel-default
  .panel-heading Карточка
  .panel-body
    %div.text-center
      = image_tag @card.image.url(:medium)
    %p
      %b
        %em Оргинальный текст: 
      = @card.original_text
    %hr
    %p
      %b
        %em Перевод:
      = @card.translated_text
    %h6.text-right
      %em= @card.review_date.strftime("%d/%m/%Y")

%ul.pager
  %li
    = link_to "Редактировать", edit_deck_card_path(@deck, @card)
  %li
    = link_to "Удалить", deck_card_path(@deck, @card), method: :delete, data: { confirm: "Вы уверены?" }
  %li
    = link_to "Назад", deck_cards_path(@deck)
